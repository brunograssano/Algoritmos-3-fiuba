Object subclass: #Alumno	instanceVariableNames: 'nombreAlumno numeroDePadron notasDelAlumno'	classVariableNames: ''	package: 'TP0-2'!!Alumno commentStamp: 'BrunoGrassano 4/18/2020 11:39' prior: 0!Clase del objeto Alumno.    Instance Variables	nombreAlumno:		<Object>	notasDelAlumno:		<Object>	numeroDePadron:		<Object>!!Alumno methodsFor: 'initialization' stamp: 'BrunoGrassano 4/17/2020 11:10'!initialize	notasDelAlumno := OrderedCollection new.! !!Alumno methodsFor: 'as yet unclassified' stamp: 'BrunoGrassano 4/18/2020 11:29'!agregarPadron: unPadron	"Agrega un padron al alumno. Este sirve como identificacion del alumno." 	numeroDePadron := unPadron. ! !!Alumno methodsFor: 'as yet unclassified' stamp: 'BrunoGrassano 4/18/2020 11:29'!calcularPromedio	"Devolvera el promedio de todas las notas que tenga el alumno."	^notasDelAlumno average! !!Alumno methodsFor: 'as yet unclassified' stamp: 'BrunoGrassano 4/18/2020 11:28'!agregarNota: unaNota	"Agrega una nota al alumno. Esta tendria que ser un valor numerico."	notasDelAlumno add: unaNota.! !!Alumno methodsFor: 'as yet unclassified' stamp: 'BrunoGrassano 4/18/2020 11:30'!obtenerPadron	"Devuelve el numero de padron del alumno."	^numeroDePadron ! !!Alumno methodsFor: 'as yet unclassified' stamp: 'BrunoGrassano 4/18/2020 11:30'!establecerNombre: unNombre 	"Le agrega un nombre al alumno."	nombreAlumno := unNombre.! !Object subclass: #Curso	instanceVariableNames: 'nombreDelCurso alumnosInscriptos'	classVariableNames: ''	package: 'TP0-2'!!Curso commentStamp: 'BrunoGrassano 4/18/2020 11:40' prior: 0!Clase del objeto CursoEsta clase interactua con la clase Alumno.     Instance Variables	alumnosInscriptos:		<Object>	nombreDelCurso:		<Object>!!Curso methodsFor: 'initialization' stamp: 'BrunoGrassano 4/17/2020 11:07'!initialize		alumnosInscriptos := OrderedCollection new.! !!Curso methodsFor: 'as yet unclassified' stamp: 'BrunoGrassano 4/18/2020 12:36'!promedioDe: padronDeUnAlumno 	"Devuelve el promedio del alumno deseado."	| alumnoBuscado |	alumnoBuscado := alumnosInscriptos detect: [ :alumno | 		alumno obtenerPadron == padronDeUnAlumno. 		].	^alumnoBuscado calcularPromedio	! !!Curso methodsFor: 'as yet unclassified' stamp: 'BrunoGrassano 4/18/2020 12:35'!aprobo: padronDeUnAlumno 	"Devuelve true o false dependiendo de si aprobo el alumno buscado."	| alumnoBuscado promedioDelAlumno |		alumnoBuscado := alumnosInscriptos detect: [ :alumno | 		alumno obtenerPadron == padronDeUnAlumno. 		].	promedioDelAlumno := alumnoBuscado calcularPromedio.		^(promedioDelAlumno >=4)! !!Curso methodsFor: 'as yet unclassified' stamp: 'BrunoGrassano 4/18/2020 11:34'!inscribirAlumno: unAlumno conNumeroDePadron: unPadron	"Inscribe a un alumno en el curso."	unAlumno agregarPadron: unPadron.	alumnosInscriptos add: unAlumno.! !!Curso methodsFor: 'as yet unclassified' stamp: 'BrunoGrassano 4/18/2020 12:36'!calificarA: padronDeUnAlumno conNota: notaDelAlumno	"Califica al alumno deseado agregandole la nota indicada."	| alumnoBuscado |	alumnoBuscado := alumnosInscriptos detect: [ :alumno | 		alumno obtenerPadron == padronDeUnAlumno. 		].	alumnoBuscado agregarNota: notaDelAlumno.! !!Curso methodsFor: 'as yet unclassified' stamp: 'BrunoGrassano 4/18/2020 11:34'!establecerNombre: nombreDeUnCurso	"Agrega el nombre al curso creado."	nombreDelCurso := nombreDeUnCurso.! !"-- -- -- -- -- -- -- -- -- -- -- -- -- -- -- -- -- -- "!Curso class	instanceVariableNames: 'alumnosInscriptos alumnoBuscado'!